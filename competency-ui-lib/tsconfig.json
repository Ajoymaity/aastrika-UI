{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "enableIvy": true,
    "compilationMode": "partial",
    "fullTemplateTypeCheck": true, 
    "strictInjectionParameters": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "resolveJsonModule":true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@aastrika_npmjs/comptency/*": [
        "projects/competency-ui/*"
      ],
      "@aastrika_npmjs/comptency": [
        "projects/competency-ui"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "./typings/*.d.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}